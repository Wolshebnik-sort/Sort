{
  "name": "Wolshebnik-sort-imports",
  "publisher": "WolshebnikSort",
  "displayName": "Automatic Import Sorter",
  "description": "Automatically sort and organize JavaScript/TypeScript imports with smart grouping and configurable modes",
  "license": "MIT",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "imports",
    "sort imports",
    "organize imports",
    "typescript",
    "javascript",
    "formatter",
    "code style",
    "eslint"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sortImports.sortImports",
        "title": "Sort Imports",
        "category": "Sort Imports"
      },
      {
        "command": "sortImports.applySortImports",
        "title": "Apply Sort Imports",
        "category": "Sort Imports"
      },
      {
        "command": "sortImports.previewSortImports",
        "title": "Preview Sort Imports",
        "category": "Sort Imports"
      }
    ],
    "keybindings": [
      {
        "command": "sortImports.applySortImports",
        "key": "ctrl+alt+o",
        "mac": "cmd+alt+o",
        "when": "editorTextFocus && (resourceExtname == .js || resourceExtname == .ts || resourceExtname == .jsx || resourceExtname == .tsx)"
      },
      {
        "command": "sortImports.previewSortImports",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorTextFocus && (resourceExtname == .js || resourceExtname == .ts || resourceExtname == .jsx || resourceExtname == .tsx)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sortImports.sortImports",
          "when": "resourceExtname == .js || resourceExtname == .ts || resourceExtname == .jsx || resourceExtname == .tsx",
          "group": "1_modification@1"
        },
        {
          "command": "sortImports.applySortImports",
          "when": "resourceExtname == .js || resourceExtname == .ts || resourceExtname == .jsx || resourceExtname == .tsx",
          "group": "1_modification@2"
        },
        {
          "command": "sortImports.previewSortImports",
          "when": "resourceExtname == .js || resourceExtname == .ts || resourceExtname == .jsx || resourceExtname == .tsx",
          "group": "1_modification@3"
        }
      ],
      "commandPalette": [
        {
          "command": "sortImports.sortImports",
          "when": "resourceExtname == .js || resourceExtname == .ts || resourceExtname == .jsx || resourceExtname == .tsx"
        },
        {
          "command": "sortImports.applySortImports",
          "when": "resourceExtname == .js || resourceExtname == .ts || resourceExtname == .jsx || resourceExtname == .tsx"
        },
        {
          "command": "sortImports.previewSortImports",
          "when": "resourceExtname == .js || resourceExtname == .ts || resourceExtname == .jsx || resourceExtname == .tsx"
        }
      ]
    },
    "configuration": {
      "title": "Sort Imports",
      "properties": {
        "sortImports.maxLineLength": {
          "type": "number",
          "default": 100,
          "description": "Maximum line length before breaking imports into multiple lines (default: 100)"
        },
        "sortImports.indentSize": {
          "type": "string",
          "default": "  ",
          "description": "Indentation string for multi-line imports"
        },
        "sortImports.aliasPrefixes": {
          "type": "array",
          "default": [
            "@/",
            "~/",
            "src/"
          ],
          "description": "Prefixes that should be treated as absolute imports"
        },
        "sortImports.detectAliasesFromProjectConfig": {
          "type": "boolean",
          "default": false,
          "description": "Automatically detect alias prefixes from nearby tsconfig/jsconfig files and simple vite/webpack alias definitions"
        },
        "sortImports.styleExtensions": {
          "type": "array",
          "default": [
            ".css",
            ".scss",
            ".sass",
            ".less"
          ],
          "description": "File extensions that should be grouped as style imports"
        },
        "sortImports.groupsOrder": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "spacing",
              "directives",
              "react",
              "libraries",
              "absolute",
              "relative",
              "sideEffect",
              "styles",
              "interfaces",
              "comments",
              "functions"
            ]
          },
          "default": [
            "directives",
            "spacing",
            "react",
            "spacing",
            "libraries",
            "spacing",
            "absolute",
            "spacing",
            "relative",
            "spacing",
            "sideEffect",
            "spacing",
            "styles",
            "spacing",
            "interfaces",
            "spacing",
            "comments",
            "spacing",
            "functions"
          ],
          "description": "Custom output order for import and related groups. Add \"spacing\" to insert an empty line between groups"
        },
        "sortImports.sortOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sort imports when a supported file is saved"
        },
        "sortImports.sortMode": {
          "type": "string",
          "enum": [
            "length",
            "alphabetical"
          ],
          "default": "length",
          "description": "Sorting mode for imports and named specifiers: by length (default) or alphabetically"
        },
        "sortImports.mergeDuplicateImports": {
          "type": "boolean",
          "default": true,
          "description": "Merge compatible duplicate imports from the same source while sorting"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Wolshebnik-sort/Sort.git"
  },
  "icon": "icon.png"
}
